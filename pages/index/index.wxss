/**index.wxss**/
.current_city
{
  display: flex;
  margin-left: auto;
  margin-right: auto;    
  height:100rpx;

  text-align: center;
  color: #25ae08;    
  background-color: #efeff4;
  font-size: 40rpx;
  
  align-items: center;
  justify-content: space-around;
  padding: 0 10rpx;

}

.icon_down
{
  height: 40rpx;
  width: 40rpx;     
}

.city_list
{
  margin-top: 2rpx;
  position: absolute;
  top: 100rpx;
  left: 0;
  width: 100%;
  background-color: #fff;
  z-index: 9; 
  font-size: 14px;
  border-bottom: 1rpx solid #ddd;
}

.city_list_show
{  
  animation: slide 500ms;
}

.city_list_hide
{
  display: none !important
}

.city_item
{
  height: 80rpx;
  line-height: 80rpx;
  padding: 0 40rpx;
  border-bottom: 1rpx solid #ddd;
}

.click_once
{
  background-color: rgba(0, 0, 0, 0.1) !important;
  opacity: 0.7 !important;
}

.scroll_view
{  
  top:100rpx;  
}

/* ------- feature --------- */
.feature .today {
  margin: 20rpx;
  padding: 20rpx 10rpx 20rpx 30rpx;  
  border-radius: 20rpx;
  background: #fff;

  display: flex;  
  flex-direction:row;
  box-shadow:4px 4px 10px 5px #999,-4px -4px 10px 5px #999;
  
  height: 80rpx;
  font-size: 28rpx;

  align-items:center;

}
.feature .today .date{
   width: 80rpx;
   
   line-height: 60rpx;
   /*margin-right: 20rpx;*/
   padding-top: 5rpx;
}
.feature .today .pic{
  width: 60rpx;
  height: 60rpx;
  margin-right: 10rpx;
  margin-left: 10rpx;
  flex:none;
}
.feature .today .desc{
  display: flex;
  flex-direction: column;
  
  width: 130px;
  justify-content:space-between;
}
.feature .today .desc text {
  
  line-height: 25rpx;
  margin-left: 20rpx;
  margin-top:5rpx;
  color:#404040;
}

.feature .today .wind{

   line-height: 60rpx;   
   padding-top: 5rpx;
   width: 120rpx;
}

.feature .today .temperature{

   line-height: 60rpx;
   padding-top: 5rpx;
}

.feature .day {
  margin: 20rpx;
  padding: 20rpx 10rpx;
  border-radius: 20rpx;
  background: #fff;
  font-size: 28rpx;
  display: flex;  
  flex-direction:row;
}
.feature .day .date{
   width: 120rpx;   
   line-height: 60rpx;
   margin-left: 10rpx;
   margin-right: 10rpx;
   padding-top: 5rpx;
}
.feature .day .week{
   width: 80rpx;   
   line-height: 60rpx;   
   padding-top: 5rpx;
}
.feature .day .pic{
  width: 60rpx;
  height: 60rpx;
  margin-right: 10rpx;
  margin-left: 10rpx;
}
.feature .day .desc{
  display: flex;
  flex-direction: column;  
  width: 130px;
  justify-content:space-between;
  flex:none;
}
.feature .day .desc text {  
  line-height: 25rpx;
  margin-left: 20rpx;
  margin-top:5rpx;
  color:#404040;
}
.feature .day .temperature{   
   line-height: 60rpx;
   padding-top: 5rpx;
}

.icon_go
{
  height: 40rpx;
  width: 40rpx;
  margin-left: 50rpx;  
}

.canvas
{
  height: 800rpx;
  width: 100%;
}

.mask
{
  position: fixed;  
  top:0;
  bottom:0;
  width: 750rpx;
  height:100vh;
  background: rgba(0,0,0,0.5);
  z-index: 8
}