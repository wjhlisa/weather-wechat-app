/* detail.wxss */

@import "../index/index.wxss";

.date {
  padding-top:0rpx;
  margin-top: 0rpx;
}

.day-desc {
  color:#fff;
  margin-top: -20rpx;
}

.day-night {
  margin: 30rpx 0; 
  display: flex;
  flex-direction: row; 
}

.day-night .split{
  border: none;
  border-left:1rpx dashed #eee;  
  height:80rpx;
  width: 0rpx;
  padding: 0;
  margin: 15rpx 15rpx 0 15rpx;
}

/* ------- today --------- */

.detail-today {
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  background: #42c642;  
  font-size:28rpx;
}
.detail-today .weather {
  display: flex;  
  flex-direction:row;  
  padding-top:20rpx;
  
}
.detail-today .weather .pic {
  width: 100rpx;
  height: 100rpx;
  margin-right: 40rpx;
  margin: 0 10rpx;
}
.detail-today .weather .desc{
  display: flex; 
  flex-direction: column; 
  margin-right: 20rpx;
  margin: 0 10rpx;
  float: right;
  width:140rpx;
}
.detail-today .weather .desc text {
  color: #fff;  
  line-height: 40rpx;
  margin-top: 10rpx;
}
.detail-today .temperature {
  color: #faf9fa;
  font-size: 70rpx;
  padding-left:40rpx;
}
.detail-today .more {
  color: #faf9fa;
  
}
.detail-today .more text {
  padding: 0 10rpx;
}
.detail-today-bottom {
  background: #faf9fa;
  width: 150%;
  height: 300rpx;
  border-radius: 150%;
  margin: -50rpx 0 0 0;
  margin-left:-25%;
}

/* ------- card --------- */
.card {
  margin-top: 20rpx;
  margin-left:20rpx;
  margin-right:20rpx;
  color:#404040;
}
.card .title {
  display: block;
  text-align:center;
  padding-bottom:5px;
  margin:0 100rpx;
  margin-bottom:5px;
  font-size:30rpx;
  border-bottom: 1rpx dashed #eee;
}
.life .item {
  display: inline-block;
  font-size: 28rpx;
}
.life .item .line {
  margin: 10rpx;
  padding: 10rpx;
  border-radius: 20rpx;
  background: #49c44a;
  display: flex;  
  flex-direction:row;
  width: 310rpx;  
}
.life .item .pic{
  width: 48rpx;
  height: 48rpx;
  margin: 0 20rpx;
}

.life .item .name, .life .item .desc{   
   line-height: 48rpx;
   padding-top: 5rpx;
   color: #fff;
}
.life .item .desc text {  
  line-height: 25rpx;
  margin-left: 20rpx;
  margin-top:5rpx;
  color:#404040;
}